<MudHidden Breakpoint="Breakpoint.SmAndDown">
    <div class="wrapper3 bg-segmento d-flex align-center justify-center">
        <MudContainer MaxWidth="MaxWidth.Large">
            <MudGrid Style="display: flex; align-items: center !important;">
                <MudItem xs="12" md="6" Class="flex flex-col justify-center">
                    <MudText Typo="Typo.h3" Class="ft-padrao fs-titulo c-w pb-8">
                        Soluções sob <br />medida <strong>para<br /> cada segmento</strong>
                    </MudText>
                    <MudText Typo="Typo.body1" Class="fs-subt-2 ft-padrao c-w">
