                    </MudCard>

                    <MudCard Class="bg-card c-w mb-2 rounded-lg" Elevation="0">
                        <MudCardContent>
                            <MudText Typo="Typo.body1" Class="fs-subt-2 ft-padrao">
                                <strong class="w-700">Indústria:</strong> Resíduos orgânicos e recicláveis com compliance.
                            </MudText>
                        </MudCardContent>
                    </MudCard>

                    <MudCard Class="bg-card c-w rounded-lg" Elevation="0">
                        <MudCardContent>
                            <MudText Typo="Typo.body1" Class="fs-subt-2 ft-padrao">
                                <strong class="w-700">Centros de distribuição:</strong> Gestão integrada e relatórios ESG.
                            </MudText>
                        </MudCardContent>
                    </MudCard>
                </MudItem>
            </MudGrid>
        </MudContainer>
    </div>
</MudHidden>

