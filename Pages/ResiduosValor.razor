            <MudGrid>
                <MudItem Class="flex flex-col justify-center text-center text-white">
                    <MudText Typo="Typo.h3"
                             Class="ft-padrao fs-titulo-m mb-8">
                        Como transformamos <strong class="f-s-g">resíduos em valor</strong>
                    </MudText>

                    <MudImage Src="assets/itens-arrow.svg"
                              Width="350"
                              Height="150"
                              Class="rounded-lg mb-8"
                              ObjectPosition="ObjectPosition.Center" />

                    <MudButton Class="bg-btn text-center ft-padrao br-1 w-700"
                               Variant="Variant.Filled"
                               Href="/entre-contato"
                               Color="Color.Success"
                               Size="Size.Medium"
                               EndIcon="@Icons.Material.Filled.ArrowOutward">
                        Solicite agora um diagnóstico
                    </MudButton>
                </MudItem>
            </MudGrid>
        </MudContainer>
    </div>
</MudHidden>

