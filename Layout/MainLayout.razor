@inherits LayoutComponentBase

@* Required *@
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />

<MudThemeProvider />

<MudLayout>
    <NavMenu></NavMenu>
    @* <MudContainer MaxWidth="MaxWidth.Large"> *@
        <MudMainContent>
            @Body
        </MudMainContent>
    @* </MudContainer> *@
</MudLayout>

@code {
    MudTheme MyTheme = new MudTheme()
        {
            Typography = new Typography()
            {
                Default = new DefaultTypography()
                {
                    FontFamily = new[] { "Exo" },
                },
            }
        };
}